<%- include('header'); -%>
 <%- include('./navbar'); -%>

<% if (currentUser.token !== null) { %>
    <h2>Vui lòng kích hoạt tài khoản <h2>
<% }  else { %>
<div class="row justify-content-center my-5">
    <div class="col-8">
        <div class="row justify-content-center">
            <div class="col-8">
                <form class="form-inline justify-content-center"  method="POST">
                    <div class="form-group mx-sm-3 mb-2">
                        <label for="todo" class="sr-only">Todo list</label>
                        <input type="text" class="form-control"  name="addtodo" >
                    </div>
                    <button type="submit"  class="btn btn-warning mb-2">Add</button>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-8">
                    <ul class="list-group ">
                        <% if (todolist) { %>
                            <% todolist.forEach(todo => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center listtodo ">
                                    <%= todo.name %>
                                    <a href="/todos/<%= todo.id %>/done" class="btn buttontk" type="button">Finish</a>
                                </li>
                                <% }); %>
                                <% } if (todolist.length === 0) { %>
                                    <div class="row justify-content-center">
                                        <div class="alert alert-light" role="alert">
                                            Don't have any plans
                                        </div>
                                    </div>
                                    <% } %>
                                </ul>
                            </div>
                        </div>
                        
                    </form>
    </div>
    </div>
    <% } %>
 <%- include('footer') %>